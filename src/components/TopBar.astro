---
import { Image } from "astro:assets";
import profile from "../assets/profile.jpg";
---

<>
  <a href="/" class="avatar">
    <Image src={profile} alt="Avatar" />
    <strong>Joshua Bassett</strong>
  </a>
  <nav>
    <ul>
      <li>
        <a href="#">Blog</a>
      </li>
      <li>
        <a href="#">Projects</a>
      </li>
    </ul>
    <ul class="icons">
      <li>
        <a
          href="https://github.com/nullobject"
          rel="noopener noreferrer"
          target="_blank"
        >
