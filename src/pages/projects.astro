---
import Eye from "../components/icons/Eye";
import GitHub from "../components/icons/GitHub";
import Layout from "../layouts/Layout.astro";

const projects = [
  {
    name: "Rygar",
    description:
      "This project emulates the original Rygar (1986) arcade hardware using a virtual machine, which represents the behavior of the original game exactly.",
    url: "http://rygar.joshbassett.info",
    repo: "nullobject/rygar-emu",
  },
  {
    name: "Risk",
    description:
      "The game of Risk is played on a map divided up into countries. The players all take turns advancing their armies and attacking other countries. The object of the game is to defeat all the other players on the map.",
    url: "http://risk.joshbassett.info",
    repo: "nullobject/risk",
  },
  {
    name: "Tetris",
    description:
      "The goal of Tetris is to score as many points as possible by clearing horizontal lines of blocks. The player must rotate, move, and drop the falling tetriminos inside the playfield. Lines are cleared when they are filled with blocks and have no empty spaces.",
    url: "http://tetris.joshbassett.info",
    repo: "nullobject/tetris",
  },
  {
    name: "Memory",
    description:
      "The goal of Memory is to match all the pairs of cards in the fewest moves possible. The game is over when all the pairs have been matched.",
    url: "http://memory.joshbassett.info",
    repo: "nullobject/memory",
  },
];
---

<Layout title="Projects | Joshua Bassett">
  <hgroup>
    <h1>Projects</h1>
    <p>Stuff I made.</p>
  </hgroup>
  <section class="projects">
    {
      projects.map((project) => (
        <article>
          <h2>{project.name}</h2>
          <p>{project.description}</p>
          <p class="links">
            <a href={project.url} target="_blank" rel="noopener noreferrer">
              <Eye class="icon-sm" /> Play
            </a>
            <a
              href={`https://github.com/${project.repo}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <GitHub class="icon-sm" /> View source
            </a>
          </p>
        </article>
      ))
    }
  </section>
</Layout>

<style>
  .projects {
    display: grid;
    gap: calc(var(--pico-spacing) * 2);
  }

  @media (min-width: 1024px) {
    .projects {
      grid-template-columns: 1fr 1fr;
    }
  }

  article {
    --pico-block-spacing-vertical: calc(var(--pico-spacing) * 1.75);
    --pico-block-spacing-horizontal: calc(var(--pico-spacing) * 1.75);
    margin: 0;
    outline-color: var(--pico-card-component-outline-color);
    outline-style: solid;
    outline-width: var(--pico-card-component-outline-width);
  }

  article h2 {
    font-size: 1.25rem;
    line-height: 1.2;
    text-wrap: balance;
    margin-bottom: calc(var(--pico-spacing) / 4);
  }

  article p {
    color: var(--pico-muted-color);
    text-wrap: pretty;
  }

  .links {
    margin-bottom: 0;
  }

  .links a {
    display: block;
  }
</style>
